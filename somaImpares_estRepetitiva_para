Algoritmo "problema_somaImpares"

Var

   i, x, y, troca, soma : inteiro
   
Inicio

      escreval ("BRASIL ESCOLA")
      escreval ("Soma dos Ímpares")
      escreval
      escreval ("Digite dois números: ")
      leia     (x)
      leia     (y)
      
      se x > y entao
         troca <- x
         x <- y
         y <- troca
      fimse
      
      soma <- 0
      
      para i de x + 1 ate y - 1 faca
        se i % 2 <> 0 entao
           soma <- soma + i
        fimse
      fimpara
      
      escreval ("Soma dos ímpares: ", soma)
      
Fimalgoritmo
