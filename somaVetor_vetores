Algoritmo "problema_somaVetor"

Var

   n, i        : inteiro
   soma, media : real
   vet         : vetor [0..9] de real

Inicio

      escreval ("CALCULANDO")
      escreval ("Soma e média de vetores")
      escreval
      escreva  ("Quantos números você vai digitar? ")
      leia     (n)
      
      soma  <- 0
      media <- 0
      
      para i de 0 ate n-1 faca
           escreva ("Digite um número: ")
           leia    (vet[i])
      fimpara
      
      escreval
      escreva ("Valores: ")
      para i de 0 ate n-1 faca
           escreva (vet[i]:2:1, " ")

           soma <- soma + vet[i]
           media <- media + vet[i]/n
           
      fimpara
      
       escreval
       escreval  ("Soma: ", soma:2:1)
       escreval ("Média: ", media:2:1)

Fimalgoritmo
