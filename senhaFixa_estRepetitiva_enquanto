Algoritmo "problema_senhaFixa"

Var

   senha : inteiro

Inicio

      escreval ("MMORPG ONLINE")
      escreval ("Login:")
      escreva  ("Digite sua senha: ")
      leia     (senha)
      
      enquanto senha <> 2002 faca
        escreval ("Senha Invalida!")
        escreva  ("Digite sua senha: ")
        leia     (senha)
      fimenquanto
      
      se senha = 2002 entao
         escreva ("Acesso Permitido!")
      fimse

Fimalgoritmo
