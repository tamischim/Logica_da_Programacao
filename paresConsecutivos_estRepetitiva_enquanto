Algoritmo "problema_paresConsecutivos"

Var

   x, soma : inteiro
   
Inicio

      escreval ("BRASIL ESCOLA")
      escreval ("Pares consecutivos")
      escreval
      escreva  ("Digite um número inteiro: ")
      leia     (x)
      
      enquanto x <> 0 faca
      
         se x % 2 <> 0 entao
            x <- x + 1
         fimse

         soma <- 5 * x + 20
         escreval ("Soma: ", soma)
         
         escreva  ("Digite um número inteiro: ")
         leia     (x)
         
      fimenquanto

Fimalgoritmo
