Algoritmo "problema_tabuada"

Var

   n, i, x : inteiro
   
Inicio

      escreval ("BRASIL ESCOLA")
      escreval ("Tabuada - Multiplicação")
      escreval
      escreval ("Deseja a tabuada para qual valor? ")
      leia     (n)
      
      para i de 1 ate 10 faca

        x <- n * i
        escreval (n, " x ", i, " = ", x)
        
      fimpara
      
Fimalgoritmo
