Algoritmo "problema_validacaoDeNota"

Var

   nota1, nota2, media : real
   
Inicio

      escreval ("UFSM - UNIVERSIDADE FEDERAL DE SANTA MARIA")
      escreval ("Curso de Ciências da Computação")
      escreval
      escreva  ("Digite a nota do primeiro trimestre: ")
      leia     (nota1)
      
      enquanto (nota1 < 0) ou (nota1 > 10) faca
        escreva ("Valor inválido! Tente novamente: ")
        leia    (nota1)
      fimenquanto
      
      escreva  ("Digite a nota do segundo trimestre: ")
      leia     (nota2)

      enquanto (nota2 < 0) ou (nota2 > 10) faca
        escreva ("Valor inválido! Tente novamente: ")
        leia    (nota2)
      fimenquanto

      media <- (nota1 + nota2) / 2.0
      
      escreval ("Média = ", media)

Fimalgoritmo
